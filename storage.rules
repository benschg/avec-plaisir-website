rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
        request.auth.token.email in firestore.get(/databases/(default)/documents/config/adminUsers).data.emails;
    }

    // Gallery images - publicly readable, only admins can upload/modify/delete
    match /gallery/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}