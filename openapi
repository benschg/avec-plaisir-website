        in: query
        schema:
          format: int32
          default: 100
          maximum: 1000
          type: integer
      - name: min-timestamp
        in: query
        description: "The minimum timestamp that sender want to filter the result.\
          \ Ex: 2021-04-14T01:27:05.382Z"
        schema:
          default: 2021-04-14T01:27:05.382Z
          type: string
      - name: minimum-level-of-trust
        in: query
        description: "The minimum LOT that sender want to filter the result. Ex: SILVER"
        required: true
        schema:
          allOf:
          - $ref: '#/components/schemas/LevelOfTrust'
          - default: BRONZE
            nullable: false
      - name: offset
        in: query
        schema:
          format: int32
          default: 0
          type: integer
      - name: primary-credential
        in: query
        description: "The primary value that sender want to get a hashed value. Possible\
          \ values: email|mobilenumber|postaladdress"
        required: true
        schema:
          allOf:
          - $ref: '#/components/schemas/HashedPrimaryCredentialType'
          - default: email
            nullable: false
      responses:
