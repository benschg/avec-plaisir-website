    get:
      tags:
      - ePost Communication Platform Monitoring
      summary: Get monitoring data for the deliveries.
      parameters:
      - name: delivery-id
        in: query
        description: "Filter <b>recipient tracking</b> base on the delivery id.<br/>If\
          \ this parameter is empty, the API will return the records for all deliveries."
        schema:
          format: int64
          type: integer
      - name: limit
        in: query
        description: "Define the limit of the <b>recipient tracking</b> list that\
          \ this API returns.<br/>For example, if a sender have 10 <b>recipient tracking</b>\
          \ in the database, and this limit parameter is 5, and the offset parameter\
          \ is 0,<br/>then this API will return the list containing the first 5 records<br/>If\
          \ not set, then default value of 48 is used"
        schema:
          format: int32
          default: 48
          type: integer
      - name: offset
        in: query
        description: "Define which position to start getting <b>recipient tracking</b>\
          \ list.<br/>For example, if a user have 10 <b>recipient tracking</b> in\
          \ the database, and this offset parameter is 5,<br/>then this API will return\
          \ <b>recipient tracking</b> list from the 5th record.<br/>If not set, then\
          \ default value of 0 is used"
        schema:
          format: int32
          default: 0
          type: integer
      - name: sort
        in: query
        description: Sorting the list for getting newest (DESC) or oldest (ASC) results.
        schema:
          allOf:
          - $ref: '#/components/schemas/SortStrategy'
          - default: DESCENDING
      responses:
        "200":
          description: List of recipient tracking was returned
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/RecipientTrackingDataResponse'
        "401":
          description: No Authorization header found or invalid token
        "400":
          description: Data invalid
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorMessage'
        "403":
