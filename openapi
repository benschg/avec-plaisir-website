          description: Affected cost center code extracted by priority with booking
            rule
          type: string
          example: CC001
        bookingText:
          description: Booking text. Extracted by priority SITExtension first and
            then account system configuration
          type: string
          example: Booking additional text for salary salary item
        bookingAdditionalText:
          description: Booking text. Extracted by priority SITExtension first and
            then account system configuration
          type: string
          example: Booking additional text for salary salary item
        vatCode:
          description: VAT code. Extracted by priority with booking rule
          type: string
          example: Soreco-001
        vatRate:
          description: VAT rate. This attr is not supported at the moment
          type: number
        vatType:
          description: VAT type. This attr is not supported at the moment
          type: string
        vatUID:
          description: VAT UID. Extracted from salary item additional info if presented
          type: string
        vatName:
          description: VAT name. Extracted from salary item additional info if presented
          type: string
        period:
          description: Period of booking item
          type: string
          example: 2019/03
