          format: date
          description: valuta date
          type: string
          example: 2021-11-01T00:00:00Z
        accountNumber:
          description: Account number
          type: string
          example: 2021-11-01T00:00:00Z
        debitAmount:
          description: Debit amount. Presented when account type of booking item is
            Debit
          type: number
          example: 100.25
        creditAmount:
          description: Credit amount. Presented when account type of booking item
            is Credit
          type: number
          example: 100.25
        amount:
          description: Amount
          type: number
          example: 100.25
        debitCreditFlag:
          description: Debit or credit signal
          type: string
          example: +
